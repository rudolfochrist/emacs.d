# -*- mode: snippet -*-
# name: ASDF test system
# key: _test
# --
(defsystem "${1:name}/test"
  :depends-on ((:require "uiop")
               "1am"
               "$1")
  :pathname "t/"
  :components ((:file "tests"))
  :perform (test-op (op c)
                    (uiop:symbol-call
                     :$1-test
                     :run-tests)))
$0