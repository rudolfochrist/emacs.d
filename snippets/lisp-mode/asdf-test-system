# -*- mode: snippet -*-
# name: ASDF test system
# key: _test
# --
(defsystem "${1:name}/test"
  :depends-on ("uiop"
               "fiasco"
               "$1")
  :pathname "t/"
  :components ((:file "tests"))
  :perform (test-op (op c)
                    (uiop:symbol-call
                     :fiasco
                     :run-package-tests
                     :package :$1/test)))
$0