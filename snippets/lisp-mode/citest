# -*- mode: snippet -*-
# name: ASDF CI Tests
# key: _citest
# --
(defsystem "${1:name}/citest"
  :depends-on ("uiop"
               "fiasco"
               "$1")
  :pathname "t/"
  :components ((:file "tests"))
  :perform (test-op (op c)
                    (uiop:symbol-call
                     :fiasco
                     :run-package-tests
                     :package :$1/test
                     :interactive nil)))
$0